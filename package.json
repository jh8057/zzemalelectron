{
  "name": "zzemalelectron",
  "version": "1.0.0",
  "description": "Hello World!",
  "main": "main.js",
  "author": "zzemal",
  "license": "MIT",
  "scripts": {
    "test": "mocha",
    "electron": "electron .",
    "dev": "cross-env NODE_ENV=development nodemon --exec electron .",
    "build:mac": "electron-builder --mac",
    "build:win64": "electron-builder --win --x64"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^19.0.6",
    "electron-builder": "^23.1.0",
    "electron-is-dev": "latest",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.18"
  },
  "build": {
    "mac": {
      "target": [
        "default"
      ],
      "icon": "./assets/icon.png",
      "extraFiles": [
        {
          "from": "assets",
          "to": "resources",
          "filter": [
            "**/*"
          ]
        }
      ]
    }
  }
}
